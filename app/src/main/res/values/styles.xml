<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Ideality.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/color_light_main_background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ideality_logo_light</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.Ideality</item>
    </style>
    <style name="Theme.Ideality.Splash.Dark" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/color_dark_main_background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ideality_icon_dark</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.Ideality</item>
    </style>
    <style name="default_icon_clickable" parent="android:Widget.Button">
        <item name="android:background">@drawable/default_clickable_button_shape</item>
    </style>
    <style name="default_text_view_style_light" parent="TextAppearance.AppCompat">
        <item name="android:drawable">@drawable/default_text_view_shape_light</item>
        <item name="android:textColor">@color/text_color_hint_primary</item>
    </style>
    <style name="default_text_view_style_dark" parent="TextAppearance.AppCompat">
        <item name="android:background">@drawable/default_text_view_shape_dark</item>
    </style>
    <style name="recents_view_home">
        <item name="android:background">@drawable/home_recents_view_shape</item>
    </style>
    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="ExpandedTitle" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">16dp</item>
    </style>

    <style name="CollapsedTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">#757575</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:maxLength">50</item>
        <item name="queryBackground">@null</item>
    </style>
    <style name="TransparentDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>
    <style name="ExpandableItemAnimation">
        <item name="android:animateLayoutChanges">true</item>
        <item name="android:animationDuration">300</item>
    </style>
    <style name="VerificationCodeInput">
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">#CCCCCC</item>
    </style>
    <style name="AlertDialog.App.Custom" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialog.App.Body.Text</item>
    </style>

    <style name="MaterialAlertDialog.App.Body.Text" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">#757575</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="CustomSwitch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:colorControlActivated">#2196F3</item>
        <item name="android:colorControlNormal">#757575</item>
        <item name="trackTint">#2196F3</item>
        <item name="thumbTint">#2196F3</item>
    </style>


</resources>
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/switch_active_transparent"/>
            <corners android:radius="100dp"/>
            <size android:height="20dp"/>
            <stroke android:width="1dp" android:color="@color/switch_active"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/switch_inactive_transparent"/>
            <corners android:radius="100dp"/>
            <size android:height="20dp"/>
            <stroke android:width="1dp" android:color="@color/switch_inactive"/>
        </shape>
    </item>
</selector>